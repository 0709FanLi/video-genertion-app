# ============================================
# AI视频生成平台 - 环境变量配置示例
# ============================================
# 复制此文件为 .env 并填入实际值
# cp .env.example .env
# vi .env

# ============================================
# 应用基础配置
# ============================================
DEBUG=False
LOG_LEVEL=INFO
CORS_ORIGINS=http://106.14.204.36,http://106.14.204.36:5000

# ============================================
# 数据库配置
# ============================================
DATABASE_URL=sqlite:///./video_generation_app.db

# ============================================
# JWT认证配置
# ============================================
SECRET_KEY=your-super-secret-key-change-in-production-use-long-random-string-at-least-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_DAYS=7

# ============================================
# 阿里云DashScope API配置（必填）
# ============================================
DASHSCOPE_API_KEY=your-dashscope-api-key-here

# ============================================
# 火山引擎即梦配置（可选）
# ============================================
VOLC_ACCESS_KEY_ID=your-volc-access-key-id
VOLC_SECRET_ACCESS_KEY=your-volc-secret-access-key

# ============================================
# DeepSeek API配置（可选）
# ============================================
DEEPSEEK_API_KEY=your-deepseek-api-key

# ============================================
# Google Gemini/Veo配置（可选）
# ============================================
GEMINI_API_KEY=your-gemini-api-key

# ============================================
# Sora 2 API配置（可选）
# ============================================
SORA_API_KEY=your-sora-api-key

# ============================================
# 阿里云OSS配置（可选）
# ============================================
OSS_ACCESS_KEY_ID=your-oss-access-key-id
OSS_ACCESS_KEY_SECRET=your-oss-access-key-secret
OSS_ENDPOINT=https://oss-cn-shanghai.aliyuncs.com
OSS_BUCKET_NAME=your-bucket-name
OSS_PUBLIC_READ=True
OSS_URL_EXPIRE_SECONDS=3600
OSS_MAX_FILE_SIZE=52428800
